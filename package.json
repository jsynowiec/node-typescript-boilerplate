{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "engines": {
    "node": ">= 18.12 <19"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~18",
    "@typescript-eslint/eslint-plugin": "~6.2",
    "@typescript-eslint/parser": "~6.2",
    "concurrently": "^8.2.2",
    "eslint": "~8.46",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-jest": "~27.2",
    "husky": "^8.0.3",
    "jest": "~29.6",
    "lint-staged": "^15.2.0",
    "prettier": "~3.0",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "tsc-alias": "^1.8.8",
    "typescript": "~5.1"
  },
  "scripts": {
    "start": "npm run server:prod",
    "dev": "npm run clean && concurrently \"npm:build:watch\" \"sleep 5 && npm run server:dev\"",
    "server": "node build/src/main.js",
    "server:prod": "NODE_ENV=production node build/src/main.js",
    "server:dev": "NODE_ENV=development node --watch build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc --project tsconfig.json && tsc-alias --project tsconfig.json",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:pre-commit": "CI=true npm test",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "prettier": "prettier --config .prettierrc --write .",
    "lint": "prettier -c . && eslint ./src/**/*.ts",
    "lint:ts": "tsc -noEmit --pretty",
    "lint:strict": "prettier -c . && eslint ./src/**/*.ts & npm run lint:ts",
    "pre-commit": "lint-staged -p false",
    "prepare": "husky install"
  },
  "dependencies": {
    "tslib": "~2.6"
  },
  "volta": {
    "node": "18.12.1"
  }
}
